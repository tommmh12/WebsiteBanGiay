@model WebsiteBanGiay.Models.Category

@{
    ViewData["Title"] = "Xóa danh mục";
    ViewData["ActivePage"] = "Categories";
}

<div class="card shadow mb-4">
    <div class="card-header py-3 bg-danger text-white">
        <h6 class="m-0 font-weight-bold">@ViewData["Title"]</h6>
    </div>
    <div class="card-body">
        <h4 class="text-danger">Bạn có chắc chắn muốn xóa danh mục này?</h4>
        <hr />

        <dl class="row">
            <dt class="col-sm-2">Tên danh mục:</dt>
            <dd class="col-sm-10">@Model.CategoryName</dd>

            <dt class="col-sm-2">Mô tả:</dt>
            <dd class="col-sm-10">@(Model.Description ?? "Không có mô tả")</dd>
        </dl>

        <form asp-action="Delete" class="mt-4">
            <input type="hidden" asp-for="CategoryId" />
            <button type="submit" class="btn btn-danger">
                <i class="fas fa-trash"></i> Xác nhận xóa
            </button>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Quay lại
            </a>
        </form>
    </div>
</div>