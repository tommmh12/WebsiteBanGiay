@model IEnumerable<WebsiteBanGiay.Models.Brand>

@{
    ViewData["Title"] = "Quản lý Thương hiệu";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="brand-management-container">
    <!-- Header Card -->
    <div class="management-header card shadow-sm border-0 mb-4">
        <div class="card-body p-4">
            <div class="d-flex justify-content-between align-items-center">
                <div class="header-title">
                    <h2 class="mb-1"><i class="fas fa-tags me-2"></i>@ViewData["Title"]</h2>
                    <p class="text-muted mb-0">Danh sách các thương hiệu hiện có</p>
                </div>
                <a asp-action="Create" class="btn btn-primary btn-add">
                    <i class="fas fa-plus me-1"></i>Tạo mới
                </a>
            </div>
        </div>
    </div>

    <!-- Main Content -->
    <div class="card shadow-sm border-0">
        <div class="card-body p-3">
            <div class="table-container">
                <table class="table table-hover align-middle" id="brandTable">
                    <thead class="table-light">
                        <tr>
                            <th class="ps-3" style="width: 90px;">Logo</th>
                            <th class="ps-3">Thương hiệu</th>
                            <th class="ps-3">Mô tả</th>
                            <th class="text-center" style="width: 120px;">Trạng thái</th>
                            <th class="text-center pe-3" style="width: 160px;">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                                <tr>
                                    <!-- Logo Column -->
                                    <td class="ps-3">
                                        <div class="logo-wrapper mx-auto">
                                        @if (!string.IsNullOrEmpty(item.LogoUrl))
                                        {
                                                    <img src="@item.LogoUrl" alt="@item.BrandName" class="brand-logo">
                                        }
                                        else
                                        {
                                                    <div class="no-logo">
                                                        <i class="fas fa-image"></i>
                                                    </div>
                                        }
                                        </div>
                                    </td>

                                    <!-- Brand Info Column -->
                                    <td class="ps-3">
                                        <div class="brand-info">
                                            <h6 class="mb-1">@item.BrandName</h6>
                                            <small class="text-muted">ID: @item.BrandId</small>
                                        </div>
                                    </td>

                                    <!-- Description Column -->
                                    <td class="ps-3">
                                        <p class="brand-description mb-0">
                                        @(item.Description.Length > 80 ? item.Description.Substring(0, 80) + "..." : item.Description)
                                        </p>
                                    </td>

                                    <!-- Status Column -->
                                    <td class="text-center">
                                        <span class="badge bg-success">Hoạt động</span>
                                    </td>

                                    <!-- Actions Column -->
                                    <td class="pe-3">
                                        <div class="action-buttons d-flex justify-content-center">
                                            <a asp-action="Edit" asp-route-id="@item.BrandId" class="btn btn-sm btn-outline-primary me-1" title="Chỉnh sửa">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a asp-action="Details" asp-route-id="@item.BrandId" class="btn btn-sm btn-outline-info me-1" title="Chi tiết">
                                                <i class="fas fa-info-circle"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@item.BrandId" class="btn btn-sm btn-outline-danger" title="Xóa">
                                                <i class="fas fa-trash-alt"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<style>
    /* Main Container */
    .brand-management-container {
        padding: 24px;
    }

    /* Header Styles */
    .management-header {
        background-color: #f8f9fa;
        border-radius: 8px;
        margin-bottom: 24px !important;
    }

    .header-title h2 {
        color: #2c3e50;
        font-weight: 600;
        margin-bottom: 8px !important;
    }

    .btn-add {
        padding: 8px 16px;
        font-weight: 500;
        border-radius: 6px;
        margin-left: 16px;
    }

    /* Table Styles */
    .table-container {
        overflow-x: auto;
        padding: 4px;
    }

    .table {
        margin-bottom: 0;
    }

    .table th {
        font-weight: 600;
        text-transform: uppercase;
        font-size: 0.75rem;
        letter-spacing: 0.5px;
        color: #495057;
        background-color: #f8f9fa !important;
        padding: 12px 8px !important;
    }

    .table td {
        padding: 16px 8px !important;
        vertical-align: middle;
    }

    .table-hover tbody tr:hover {
        background-color: rgba(13, 110, 253, 0.05);
    }

    /* Logo Styles */
    .logo-wrapper {
        width: 60px;
        height: 60px;
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: #f8f9fa;
        border-radius: 6px;
        border: 1px solid #e9ecef;
        padding: 4px;
    }

    .brand-logo {
        max-width: 100%;
        max-height: 100%;
        object-fit: contain;
    }

    .no-logo {
        color: #adb5bd;
        font-size: 1.5rem;
    }

    /* Brand Info Styles */
    .brand-info h6 {
        color: #212529;
        font-weight: 600;
        margin-bottom: 4px !important;
    }

    .brand-info small {
        font-size: 0.75rem;
        color: #6c757d;
    }

    .brand-description {
        font-size: 0.875rem;
        color: #6c757d;
        line-height: 1.5;
    }

    /* Status Badge */
    .badge {
        padding: 6px 10px;
        font-size: 0.75rem;
        font-weight: 500;
        border-radius: 4px;
    }

    /* Action Buttons */
    .action-buttons .btn {
        width: 34px;
        height: 34px;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        border-radius: 6px !important;
    }

    /* Spacing Utilities */
    .ps-3 {
        padding-left: 16px !important;
    }

    .pe-3 {
        padding-right: 16px !important;
    }

    .me-1 {
        margin-right: 8px !important;
    }

    .mb-1 {
        margin-bottom: 8px !important;
    }

    /* Responsive Adjustments */
    @@media (max-width: 768px) {
        .brand-management-container {
            padding: 16px;
        }

        .management-header {
            flex-direction: column;
            align-items: flex-start;
        }

        .btn-add {
            margin: 12px 0 0 0;
            width: 100%;
        }

        .table th, 
        .table td {
            padding: 12px 6px !important;
        }
    }
</style>

@section Scripts {
        <script>
            $(document).ready(function() {
                $('#brandTable').DataTable({
                    "language": {
                        "lengthMenu": "Hiển thị _MENU_ bản ghi mỗi trang",
                        "zeroRecords": "Không tìm thấy thương hiệu nào",
                        "info": "Trang _PAGE_ trên _PAGES_",
                        "infoEmpty": "Không có dữ liệu",
                        "infoFiltered": "(đã lọc từ _MAX_ bản ghi)",
                        "search": "Tìm kiếm:",
                        "paginate": {
                            "first": "Đầu",
                            "last": "Cuối",
                            "next": "Sau",
                            "previous": "Trước"
                        }
                    },
                    "dom": '<"top"<"row"<"col-md-6"l><"col-md-6"f>>>rt<"bottom"<"row"<"col-md-6"i><"col-md-6"p>>>',
                    "columnDefs": [
                        { "orderable": false, "targets": [0, 3, 4] },
                        { "className": "text-center", "targets": [3] }
                    ],
                    "responsive": true
                });
            });
        </script>
}